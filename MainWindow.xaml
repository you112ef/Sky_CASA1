<Window x:Class="MedicalLabAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MedicalLabAnalyzer - نظام إدارة المختبرات الطبية" 
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#1976D2" Padding="20,10">
            <TextBlock Text="MedicalLabAnalyzer" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Navigation -->
            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <TextBlock Text="القائمة الرئيسية" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Margin="0,0,0,20"/>
                
                <Button Content="لوحة التحكم" 
                        Height="40" 
                        Margin="0,5"/>
                <Button Content="إدارة المرضى" 
                        Height="40" 
                        Margin="0,5"/>
                <Button Content="التحاليل الطبية" 
                        Height="40" 
                        Margin="0,5"/>
                <Button Content="تحليل CASA" 
                        Height="40" 
                        Margin="0,5"/>
                <Button Content="التقارير" 
                        Height="40" 
                        Margin="0,5"/>
                <Button Content="الإعدادات" 
                        Height="40" 
                        Margin="0,5"/>
            </StackPanel>
            
            <!-- Content Area -->
            <Border Grid.Column="1" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="مرحباً بك في نظام إدارة المختبرات الطبية" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Margin="0,0,0,20"/>
                    
                    <TextBlock Text="هذا النظام يوفر:" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Margin="0,0,0,10"/>
                    
                    <StackPanel Margin="20,0,0,0">
                        <TextBlock Text="• تحليل CASA متقدم للحيوانات المنوية" 
                                   Margin="0,5"/>
                        <TextBlock Text="• تحليل CBC شامل للدم" 
                                   Margin="0,5"/>
                        <TextBlock Text="• تحليل البول والبراز" 
                                   Margin="0,5"/>
                        <TextBlock Text="• نظام تقارير احترافي" 
                                   Margin="0,5"/>
                        <TextBlock Text="• إدارة المرضى والفحوصات" 
                                   Margin="0,5"/>
                        <TextBlock Text="• واجهة عربية سهلة الاستخدام" 
                                   Margin="0,5"/>
                    </StackPanel>
                    
                    <TextBlock Text="تم تطوير هذا النظام بواسطة Medical Lab Solutions" 
                               FontSize="12" 
                               Foreground="Gray" 
                               Margin="0,30,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="20,10">
            <TextBlock Text="MedicalLabAnalyzer v1.0.0 - © 2024 Medical Lab Solutions" 
                       HorizontalAlignment="Center" 
                       Foreground="Gray"/>
        </Border>
    </Grid>
</Window>