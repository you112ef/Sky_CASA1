<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <SelfContained>false</SelfContained>
    <!-- <ApplicationIcon>Resources\app.ico</ApplicationIcon> -->
    <AssemblyTitle>Medical Lab Analyzer</AssemblyTitle>
    <AssemblyDescription>Professional Medical Laboratory Management System with Video Analysis</AssemblyDescription>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
    <Company>Medical Lab Solutions</Company>
    <Product>Medical Lab Analyzer</Product>
    <Copyright>Copyright Â© 2024</Copyright>
    
    <!-- EmguCV Performance Optimizations -->
    <EmguCVLinkTarget>x64</EmguCVLinkTarget>
    <EmguCVNativeFileSkip>false</EmguCVNativeFileSkip>
    <EmguCVErrorOnMissingRuntime>true</EmguCVErrorOnMissingRuntime>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>DEBUG;TRACE</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DefineConstants>CRYSTAL</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <!-- WPF and UI Dependencies -->
    <PackageReference Include="Microsoft.Xaml.Behaviors.Wpf" Version="1.1.77" />
    <PackageReference Include="MaterialDesignThemes" Version="4.9.0">
      <IncludeAssets>compile; runtime</IncludeAssets>
      <ExcludeAssets>contentFiles</ExcludeAssets>
    </PackageReference>
    <PackageReference Include="MaterialDesignColors" Version="2.1.4" />
    
    <!-- EmguCV for Video Analysis - Optimized for x64 Windows only -->
    <PackageReference Include="Emgu.CV" Version="4.8.1.5350" />
    <PackageReference Include="Emgu.CV.Bitmap" Version="4.8.1.5350" />
    <!-- Only include x64 runtime to reduce download size -->
    <PackageReference Include="Emgu.CV.runtime.windows" Version="4.8.1.5350" />
    
    <!-- Database and ORM -->
    <PackageReference Include="System.Data.SQLite.Core" Version="1.0.118" />
    <PackageReference Include="Dapper" Version="2.1.15" />
    
    <!-- Password Hashing -->
    <PackageReference Include="BCrypt.Net-Next" Version="4.0.3" />
    
    <!-- PDF Generation -->
    <PackageReference Include="PdfSharp-MigraDoc" Version="1.50.5147" />
    
    <!-- JSON Support -->
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    
    <!-- Logging and Configuration (Core logging inherited from Directory.Build.props) -->
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="8.0.0" />
    <PackageReference Include="Serilog.Sinks.File" Version="5.0.0" />
    
    <!-- Validation and Utilities -->
    <PackageReference Include="FluentValidation" Version="11.8.1" />
    <PackageReference Include="AutoMapper" Version="12.0.1" />
    
    <!-- Optional: Excel Export -->
    <PackageReference Include="EPPlus" Version="7.0.5" />
    
    <!-- Optional: MVVM Framework -->
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.2.2" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Models\" />
    <Folder Include="ViewModels\" />
    <Folder Include="Views\" />
    <Folder Include="Services\" />
    <Folder Include="Data\" />
    <Folder Include="Resources\" />
    <Folder Include="Reports\" />
    <Folder Include="Utils\" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\**\*" />
  </ItemGroup>

  <ItemGroup>
    <None Update="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Database\**\*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <!-- Custom target to validate EmguCV dependencies -->
  <Target Name="ValidateEmguCVDependencies" AfterTargets="Restore">
    <Message Text="Validating EmguCV dependencies for x64 runtime..." Importance="high" />
    <ItemGroup>
      <EmguCVFiles Include="$(NuGetPackageRoot)emgu.cv.runtime.windows\**\runtimes\win-x64\**\*.dll" />
    </ItemGroup>
    <Message Text="Found @(EmguCVFiles-&gt;Count()) EmguCV runtime files" Importance="high" />
  </Target>

</Project>