<UserControl x:Class="MedicalLabAnalyzer.Views.ExamManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             FlowDirection="RightToLeft">
    
    <UserControl.Resources>
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0,0,0,3"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#2196F3"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="ActiveTabButtonStyle" TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
            <Setter Property="Foreground" Value="#2196F3"/>
            <Setter Property="BorderBrush" Value="#2196F3"/>
        </Style>
        
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="إدارة الفحوصات" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#333"/>
            <TextBlock Text="إضافة وإدارة جميع أنواع التحاليل الطبية" 
                       FontSize="14" 
                       Foreground="#666" 
                       Margin="0,5,0,0"/>
        </StackPanel>
        
        <!-- Tab Navigation -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    Margin="0,0,0,20"
                    Background="#F5F5F5">
            
            <Button Content="تحليل CASA" 
                    Style="{StaticResource TabButtonStyle}"
                    Command="{Binding SelectCASACommand}"/>
            
            <Button Content="تحليل CBC" 
                    Style="{StaticResource TabButtonStyle}"
                    Command="{Binding SelectCBCCommand}"/>
            
            <Button Content="تحليل البول" 
                    Style="{StaticResource TabButtonStyle}"
                    Command="{Binding SelectUrineCommand}"/>
            
            <Button Content="تحليل البراز" 
                    Style="{StaticResource TabButtonStyle}"
                    Command="{Binding SelectStoolCommand}"/>
        </StackPanel>
        
        <!-- Content Area -->
        <Grid Grid.Row="2">
            
            <!-- CASA Analysis -->
            <StackPanel x:Name="CASA_Panel" 
                        Visibility="{Binding IsCASASelected, Converter={StaticResource BoolToVisibilityConverter}}">
                
                <Border Background="White" 
                        Padding="20" 
                        CornerRadius="8" 
                        BorderBrush="#DDD" 
                        BorderThickness="1">
                    
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Patient Selection -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,20">
                            <TextBlock Text="اختيار المريض:" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,10"/>
                            <ComboBox x:Name="cmbCASAPatient" 
                                      Width="300" 
                                      Height="35"
                                      ItemsSource="{Binding Patients}"
                                      SelectedItem="{Binding SelectedPatient}"
                                      DisplayMemberPath="FullName"
                                      SelectedValuePath="Id"/>
                        </StackPanel>
                        
                        <!-- Video File Selection -->
                        <StackPanel Grid.Row="1" Margin="0,0,0,20">
                            <TextBlock Text="ملف الفيديو:" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBox Grid.Column="0" 
                                         x:Name="txtCASAVideoPath"
                                         Height="35" 
                                         Padding="10,8"
                                         Text="{Binding VideoFilePath}"
                                         IsReadOnly="True"
                                         Margin="0,0,10,0"/>
                                
                                <Button Grid.Column="1" 
                                        Content="اختيار ملف" 
                                        Style="{StaticResource ActionButtonStyle}"
                                        Command="{Binding SelectVideoCommand}"
                                        Height="35"/>
                            </Grid>
                        </StackPanel>
                        
                        <!-- Analysis Button -->
                        <StackPanel Grid.Row="2">
                            <Button Content="بدء تحليل CASA" 
                                    Style="{StaticResource ActionButtonStyle}"
                                    Command="{Binding AnalyzeCASACommand}"
                                    Height="40" 
                                    FontSize="14"
                                    FontWeight="Bold"/>
                            
                            <ProgressBar x:Name="CASA_Progress" 
                                         Height="4" 
                                         Margin="0,10" 
                                         Visibility="{Binding IsAnalyzing, Converter={StaticResource BoolToVisibilityConverter}}"
                                         IsIndeterminate="True"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
            
            <!-- CBC Analysis -->
            <StackPanel x:Name="CBC_Panel" 
                        Visibility="{Binding IsCBCSelected, Converter={StaticResource BoolToVisibilityConverter}}">
                
                <Border Background="White" 
                        Padding="20" 
                        CornerRadius="8" 
                        BorderBrush="#DDD" 
                        BorderThickness="1">
                    
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Patient Selection -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,20">
                            <TextBlock Text="اختيار المريض:" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,10"/>
                            <ComboBox x:Name="cmbCBCPatient" 
                                      Width="300" 
                                      Height="35"
                                      ItemsSource="{Binding Patients}"
                                      SelectedItem="{Binding SelectedPatient}"
                                      DisplayMemberPath="FullName"
                                      SelectedValuePath="Id"/>
                        </StackPanel>
                        
                        <!-- CBC Parameters -->
                        <ScrollViewer Grid.Row="1" 
                                      Height="300" 
                                      VerticalScrollBarVisibility="Auto">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Left Column -->
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="معاملات CBC:" 
                                               FontSize="16" 
                                               FontWeight="Bold" 
                                               Margin="0,0,0,15"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="WBC (×10³/μL):" VerticalAlignment="Center"/>
                                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding CBCData.WBC}" Height="25" Margin="5"/>
                                        
                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="RBC (×10⁶/μL):" VerticalAlignment="Center"/>
                                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CBCData.RBC}" Height="25" Margin="5"/>
                                        
                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Hemoglobin (g/dL):" VerticalAlignment="Center"/>
                                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding CBCData.Hemoglobin}" Height="25" Margin="5"/>
                                        
                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Hematocrit (%):" VerticalAlignment="Center"/>
                                        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding CBCData.Hematocrit}" Height="25" Margin="5"/>
                                        
                                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Platelets (×10³/μL):" VerticalAlignment="Center"/>
                                        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding CBCData.Platelets}" Height="25" Margin="5"/>
                                        
                                        <TextBlock Grid.Row="5" Grid.Column="0" Text="MCV (fL):" VerticalAlignment="Center"/>
                                        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding CBCData.MCV}" Height="25" Margin="5"/>
                                        
                                        <TextBlock Grid.Row="6" Grid.Column="0" Text="MCH (pg):" VerticalAlignment="Center"/>
                                        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding CBCData.MCH}" Height="25" Margin="5"/>
                                        
                                        <TextBlock Grid.Row="7" Grid.Column="0" Text="MCHC (g/dL):" VerticalAlignment="Center"/>
                                        <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding CBCData.MCHC}" Height="25" Margin="5"/>
                                    </Grid>
                                </StackPanel>
                                
                                <!-- Right Column -->
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="الخلايا التفريقية:" 
                                               FontSize="16" 
                                               FontWeight="Bold" 
                                               Margin="0,0,0,15"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Neutrophils (%):" VerticalAlignment="Center"/>
                                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding CBCData.Neutrophils}" Height="25" Margin="5"/>
                                        
                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Lymphocytes (%):" VerticalAlignment="Center"/>
                                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CBCData.Lymphocytes}" Height="25" Margin="5"/>
                                        
                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Monocytes (%):" VerticalAlignment="Center"/>
                                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding CBCData.Monocytes}" Height="25" Margin="5"/>
                                        
                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Eosinophils (%):" VerticalAlignment="Center"/>
                                        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding CBCData.Eosinophils}" Height="25" Margin="5"/>
                                        
                                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Basophils (%):" VerticalAlignment="Center"/>
                                        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding CBCData.Basophils}" Height="25" Margin="5"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </ScrollViewer>
                        
                        <!-- Analysis Button -->
                        <StackPanel Grid.Row="2" Margin="0,20,0,0">
                            <Button Content="تحليل CBC" 
                                    Style="{StaticResource ActionButtonStyle}"
                                    Command="{Binding AnalyzeCBCCommand}"
                                    Height="40" 
                                    FontSize="14"
                                    FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
            
            <!-- Urine Analysis -->
            <StackPanel x:Name="Urine_Panel" 
                        Visibility="{Binding IsUrineSelected, Converter={StaticResource BoolToVisibilityConverter}}">
                
                <Border Background="White" 
                        Padding="20" 
                        CornerRadius="8" 
                        BorderBrush="#DDD" 
                        BorderThickness="1">
                    
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Patient Selection -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,20">
                            <TextBlock Text="اختيار المريض:" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,10"/>
                            <ComboBox x:Name="cmbUrinePatient" 
                                      Width="300" 
                                      Height="35"
                                      ItemsSource="{Binding Patients}"
                                      SelectedItem="{Binding SelectedPatient}"
                                      DisplayMemberPath="FullName"
                                      SelectedValuePath="Id"/>
                        </StackPanel>
                        
                        <!-- Urine Parameters -->
                        <ScrollViewer Grid.Row="1" 
                                      Height="300" 
                                      VerticalScrollBarVisibility="Auto">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Physical Properties -->
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="الخصائص الفيزيائية:" 
                                               FontSize="16" 
                                               FontWeight="Bold" 
                                               Margin="0,0,0,15"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="اللون:" VerticalAlignment="Center"/>
                                        <ComboBox Grid.Row="0" Grid.Column="1" 
                                                  ItemsSource="{Binding UrineColors}"
                                                  SelectedItem="{Binding UrineData.Color}"
                                                  Height="25" Margin="5"/>
                                        
                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="pH:" VerticalAlignment="Center"/>
                                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding UrineData.pH}" Height="25" Margin="5"/>
                                        
                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="الكثافة النوعية:" VerticalAlignment="Center"/>
                                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding UrineData.SpecificGravity}" Height="25" Margin="5"/>
                                    </Grid>
                                </StackPanel>
                                
                                <!-- Chemical Properties -->
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="الخصائص الكيميائية:" 
                                               FontSize="16" 
                                               FontWeight="Bold" 
                                               Margin="0,0,0,15"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="البروتين:" VerticalAlignment="Center"/>
                                        <ComboBox Grid.Row="0" Grid.Column="1" 
                                                  ItemsSource="{Binding UrineProteinLevels}"
                                                  SelectedItem="{Binding UrineData.Protein}"
                                                  Height="25" Margin="5"/>
                                        
                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="الجلوكوز:" VerticalAlignment="Center"/>
                                        <ComboBox Grid.Row="1" Grid.Column="1" 
                                                  ItemsSource="{Binding UrineGlucoseLevels}"
                                                  SelectedItem="{Binding UrineData.Glucose}"
                                                  Height="25" Margin="5"/>
                                        
                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="الدم:" VerticalAlignment="Center"/>
                                        <ComboBox Grid.Row="2" Grid.Column="1" 
                                                  ItemsSource="{Binding UrineBloodLevels}"
                                                  SelectedItem="{Binding UrineData.Blood}"
                                                  Height="25" Margin="5"/>
                                        
                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="الكريات البيض:" VerticalAlignment="Center"/>
                                        <ComboBox Grid.Row="3" Grid.Column="1" 
                                                  ItemsSource="{Binding UrineLeukocyteLevels}"
                                                  SelectedItem="{Binding UrineData.Leukocytes}"
                                                  Height="25" Margin="5"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </ScrollViewer>
                        
                        <!-- Analysis Button -->
                        <StackPanel Grid.Row="2" Margin="0,20,0,0">
                            <Button Content="تحليل البول" 
                                    Style="{StaticResource ActionButtonStyle}"
                                    Command="{Binding AnalyzeUrineCommand}"
                                    Height="40" 
                                    FontSize="14"
                                    FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
            
            <!-- Stool Analysis -->
            <StackPanel x:Name="Stool_Panel" 
                        Visibility="{Binding IsStoolSelected, Converter={StaticResource BoolToVisibilityConverter}}">
                
                <Border Background="White" 
                        Padding="20" 
                        CornerRadius="8" 
                        BorderBrush="#DDD" 
                        BorderThickness="1">
                    
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Patient Selection -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,20">
                            <TextBlock Text="اختيار المريض:" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,10"/>
                            <ComboBox x:Name="cmbStoolPatient" 
                                      Width="300" 
                                      Height="35"
                                      ItemsSource="{Binding Patients}"
                                      SelectedItem="{Binding SelectedPatient}"
                                      DisplayMemberPath="FullName"
                                      SelectedValuePath="Id"/>
                        </StackPanel>
                        
                        <!-- Stool Parameters -->
                        <ScrollViewer Grid.Row="1" 
                                      Height="300" 
                                      VerticalScrollBarVisibility="Auto">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Physical Properties -->
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="الخصائص الفيزيائية:" 
                                               FontSize="16" 
                                               FontWeight="Bold" 
                                               Margin="0,0,0,15"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="اللون:" VerticalAlignment="Center"/>
                                        <ComboBox Grid.Row="0" Grid.Column="1" 
                                                  ItemsSource="{Binding StoolColors}"
                                                  SelectedItem="{Binding StoolData.Color}"
                                                  Height="25" Margin="5"/>
                                        
                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="التماسك:" VerticalAlignment="Center"/>
                                        <ComboBox Grid.Row="1" Grid.Column="1" 
                                                  ItemsSource="{Binding StoolConsistencies}"
                                                  SelectedItem="{Binding StoolData.Consistency}"
                                                  Height="25" Margin="5"/>
                                        
                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="الدم الخفي:" VerticalAlignment="Center"/>
                                        <ComboBox Grid.Row="2" Grid.Column="1" 
                                                  ItemsSource="{Binding StoolOccultBloodLevels}"
                                                  SelectedItem="{Binding StoolData.OccultBlood}"
                                                  Height="25" Margin="5"/>
                                    </Grid>
                                </StackPanel>
                                
                                <!-- Microscopic Examination -->
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="الفحص المجهري:" 
                                               FontSize="16" 
                                               FontWeight="Bold" 
                                               Margin="0,0,0,15"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="الطفيليات:" VerticalAlignment="Center"/>
                                        <ComboBox Grid.Row="0" Grid.Column="1" 
                                                  ItemsSource="{Binding StoolParasiteLevels}"
                                                  SelectedItem="{Binding StoolData.Parasites}"
                                                  Height="25" Margin="5"/>
                                        
                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="البكتيريا:" VerticalAlignment="Center"/>
                                        <ComboBox Grid.Row="1" Grid.Column="1" 
                                                  ItemsSource="{Binding StoolBacteriaLevels}"
                                                  SelectedItem="{Binding StoolData.Bacteria}"
                                                  Height="25" Margin="5"/>
                                        
                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="الخميرة:" VerticalAlignment="Center"/>
                                        <ComboBox Grid.Row="2" Grid.Column="1" 
                                                  ItemsSource="{Binding StoolYeastLevels}"
                                                  SelectedItem="{Binding StoolData.Yeast}"
                                                  Height="25" Margin="5"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </ScrollViewer>
                        
                        <!-- Analysis Button -->
                        <StackPanel Grid.Row="2" Margin="0,20,0,0">
                            <Button Content="تحليل البراز" 
                                    Style="{StaticResource ActionButtonStyle}"
                                    Command="{Binding AnalyzeStoolCommand}"
                                    Height="40" 
                                    FontSize="14"
                                    FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>