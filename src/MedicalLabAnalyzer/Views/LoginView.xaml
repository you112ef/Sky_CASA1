<Window x:Class="MedicalLabAnalyzer.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="تسجيل الدخول - MedicalLabAnalyzer" 
        Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource MaterialDesignPrimary}" Padding="20,15">
            <StackPanel>
                <TextBlock Text="MedicalLabAnalyzer" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="نظام إدارة المختبرات الطبية" 
                           FontSize="14" 
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Login Form -->
        <Grid Grid.Row="1" Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Username -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="اسم المستخدم" 
                           Style="{DynamicResource MaterialDesignBody1TextBlock}"
                           Margin="0,0,0,8"/>
                <TextBox x:Name="UsernameTextBox"
                         materialDesign:HintAssist.Hint="أدخل اسم المستخدم"
                         Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                         FontSize="16"
                         Padding="12,8"/>
            </StackPanel>
            
            <!-- Password -->
            <StackPanel Grid.Row="1" Margin="0,0,0,20">
                <TextBlock Text="كلمة المرور" 
                           Style="{DynamicResource MaterialDesignBody1TextBlock}"
                           Margin="0,0,0,8"/>
                <PasswordBox x:Name="PasswordBox"
                             materialDesign:HintAssist.Hint="أدخل كلمة المرور"
                             Style="{DynamicResource MaterialDesignOutlinedPasswordBox}"
                             FontSize="16"
                             Padding="12,8"/>
            </StackPanel>
            
            <!-- Remember Me -->
            <CheckBox Grid.Row="2" 
                      x:Name="RememberMeCheckBox"
                      Content="تذكرني"
                      Style="{DynamicResource MaterialDesignCheckBox}"
                      Margin="0,0,0,20"/>
            
            <!-- Login Button -->
            <Button Grid.Row="3" 
                    x:Name="LoginButton"
                    Content="تسجيل الدخول"
                    Style="{DynamicResource MaterialDesignRaisedButton}"
                    Height="45"
                    FontSize="16"
                    Margin="0,0,0,20"
                    Click="LoginButton_Click"/>
            
            <!-- Status Message -->
            <TextBlock Grid.Row="4" 
                       x:Name="StatusTextBlock"
                       Text=""
                       Foreground="Red"
                       HorizontalAlignment="Center"
                       Visibility="Collapsed"/>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="{DynamicResource MaterialDesignDivider}" Padding="20,10">
            <TextBlock Text="MedicalLabAnalyzer v2.0.0 - © 2024 Medical Lab Solutions" 
                       HorizontalAlignment="Center" 
                       Style="{DynamicResource MaterialDesignCaptionTextBlock}"/>
        </Border>
    </Grid>
</Window>