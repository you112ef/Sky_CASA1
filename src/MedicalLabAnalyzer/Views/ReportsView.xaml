<UserControl x:Class="MedicalLabAnalyzer.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             FlowDirection="RightToLeft">
    
    <UserControl.Resources>
        <Style x:Key="ReportButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="ReportTypeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="التقارير" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#333"/>
            <TextBlock Text="إنشاء وتصدير التقارير الطبية المختلفة" 
                       FontSize="14" 
                       Foreground="#666" 
                       Margin="0,5,0,0"/>
        </StackPanel>
        
        <!-- Report Type Selection -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="نوع التقرير:" 
                       FontSize="16" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,10"/>
            
            <ItemsControl ItemsSource="{Binding AvailableReportTypes}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding}" 
                                Style="{StaticResource ReportTypeButtonStyle}"
                                Command="{Binding DataContext.SelectReportTypeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
        
        <!-- Date Range and Actions -->
        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Start Date -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="من تاريخ:" 
                               FontSize="14" 
                               Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding StartDate}" 
                                FontSize="14"/>
                </StackPanel>
                
                <!-- End Date -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <TextBlock Text="إلى تاريخ:" 
                               FontSize="14" 
                               Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding EndDate}" 
                                FontSize="14"/>
                </StackPanel>
                
                <!-- Generate Button -->
                <StackPanel Grid.Column="2" VerticalAlignment="Bottom" Margin="20,0,0,0">
                    <Button Content="إنشاء التقرير" 
                            Style="{StaticResource ReportButtonStyle}"
                            Command="{Binding GenerateReportCommand}"/>
                </StackPanel>
            </Grid>
        </StackPanel>
        
        <!-- Report Templates and Actions -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Report Templates -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="قوالب التقارير المتاحة:" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,10"/>
                
                <ItemsControl ItemsSource="{Binding ReportTemplates}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#F9F9F9" 
                                    BorderBrush="#DDD" 
                                    BorderThickness="1" 
                                    Margin="0,0,0,5" 
                                    Padding="15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Name}" 
                                                   FontSize="16" 
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Description}" 
                                                   FontSize="14" 
                                                   Foreground="#666" 
                                                   Margin="0,5,0,0"/>
                                        <TextBlock Text="{Binding Category}" 
                                                   FontSize="12" 
                                                   Foreground="#999" 
                                                   Margin="0,5,0,0"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" 
                                                Orientation="Horizontal" 
                                                VerticalAlignment="Center">
                                        <Button Content="استخدام" 
                                                Style="{StaticResource ReportButtonStyle}"
                                                Margin="0,0,5,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            
            <!-- Action Buttons -->
            <StackPanel Grid.Column="1" 
                        Orientation="Vertical" 
                        Margin="20,0,0,0" 
                        VerticalAlignment="Top">
                <Button Content="تصدير" 
                        Style="{StaticResource ReportButtonStyle}"
                        Command="{Binding ExportReportCommand}"
                        Margin="0,0,0,10"/>
                
                <Button Content="طباعة" 
                        Style="{StaticResource ReportButtonStyle}"
                        Command="{Binding PrintReportCommand}"
                        Margin="0,0,0,10"/>
                
                <Button Content="إرسال بالبريد" 
                        Style="{StaticResource ReportButtonStyle}"
                        Command="{Binding EmailReportCommand}"/>
            </StackPanel>
        </Grid>
        
        <!-- Status and Loading -->
        <Grid Grid.Row="3" 
              Panel.ZIndex="1" 
              Background="#80FFFFFF" 
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" 
                             Width="100" 
                             Height="4" 
                             Foreground="#2196F3"/>
                <TextBlock Text="جاري إنشاء التقرير..." 
                           FontSize="16" 
                           Margin="0,16,0,0" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
        
        <!-- Status Message -->
        <TextBlock Grid.Row="3" 
                   Text="{Binding StatusMessage}" 
                   FontSize="14" 
                   Foreground="#666" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Bottom" 
                   Margin="0,0,0,20"/>
    </Grid>
</UserControl>